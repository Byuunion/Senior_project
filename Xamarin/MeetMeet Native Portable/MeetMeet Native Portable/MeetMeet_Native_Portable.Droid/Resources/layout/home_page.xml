<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff120b0b">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff120b0b"
        android:weightSum="100"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/UsernameTextView"
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:textColor="#368DEB"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp" />
        <Button
            android:id="@+id/NearbyUsersButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@drawable/ButtonSignInStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:text="Find Nearby Users" />
        <TextView
            android:id="@+id/txtOr"
            android:text="-or-"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:textColor="#368DEB"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp" />
        <Button
            android:id="@+id/SetLocationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@drawable/ButtonSignUpStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:text="Set Current Location" />
        <TextView
            android:id="@+id/txtOr"
            android:text="-or-"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:textColor="#368DEB"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp" />
        <Button
            android:id="@+id/SendMessageButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/ButtonSignInStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:text="Send Message" />
        <Button
            android:id="@+id/btnGroupMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/ButtonSignUpStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="Group Message" />
    </LinearLayout>
</RelativeLayout>